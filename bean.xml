<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"

xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"

xsi:schemaLocation="http://www.springframework.org/schema/beans 

         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
<bean id="helloWorld" class="com.hand.spring_Event.HelloWorld">
	<property name="message" value="Hello World!" />
</bean>

<bean id="cStartEventHandler" class="com.hand.spring_Event.CStartEventHandler" />

<bean id="cStopEventHandler" class="com.hand.spring_Event.CStopEventHandler" />
</beans>